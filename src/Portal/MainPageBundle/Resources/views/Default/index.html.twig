<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
<link rel="stylesheet" href="{{ asset('css/poster.css') }}"/>
<link rel="stylesheet" href="{{ asset('css/mobile.css') }}"/>


<div class="content" id="content">
    {% for movie in movies %}
        <div class="movie">
            {#<div class="movie_image" style="background-image: url('{{ movie.getPoster() }}')"></div>#}
            <img class="movie_poster" data-id="{{ movie.getId }}" src="{{ vich_uploader_asset(movie, 'posterImageFile') }}">
            {#<img src="{{ vich_uploader_asset(movie, 'posterImageFile') }}" alt="" />#}
            <p class="movie_title">
                {{ movie.getNameEn }}
            </p>
        </div>
    {% endfor %}

</div>

<div class="details" id="details">
    {% for movie in movies %}
        <div class="movie_details hidden" id="{{ movie.getId }}">
            <img class="image" src="{{ vich_uploader_asset(movie, 'posterImageFile') }}">
            <div class="info">
                <p class="desc">Название: {{ movie.getNameEn }}</p>
                <p>Жанр: {{ movie.getGenre }}</p>
                <p>Год: {{ movie.getYear }}</p>
                <p>Страна: {{ movie.getCountry }}</p>
                <p>Режиссёр: {{ movie.getProducer }}</p>
                <p>Продолжительность: {{ movie.getDuration }} мин</p>
                <br>
                <br>
                <br>
                <br>
	        <br>	
                <p>{{ movie.getDescriptionRu }}</p>
            </div>
        </div>
    {% endfor %}
</div>


<!-- Bootstrap -->
<div class="navigation">
    {{ knp_pagination_render(movies) }}
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
